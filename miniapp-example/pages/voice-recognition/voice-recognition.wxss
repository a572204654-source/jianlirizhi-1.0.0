/* miniapp-example/pages/voice-recognition/voice-recognition.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面标题 */
.header {
  text-align: center;
  padding: 30rpx 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  color: white;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
}

/* 统计信息 */
.stats-box {
  display: flex;
  justify-content: space-around;
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-value {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 10rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 录音区域 */
.record-section {
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.record-status {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.record-btn {
  width: 300rpx;
  height: 300rpx;
  margin: 0 auto 30rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s;
}

.record-btn.recording {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 8rpx 24rpx rgba(245, 87, 108, 0.4);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 12rpx 32rpx rgba(245, 87, 108, 0.6);
  }
}

.record-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.record-text {
  color: white;
  font-size: 28rpx;
  font-weight: bold;
}

.file-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  border: 2rpx dashed #667eea;
  border-radius: 12rpx;
  color: #667eea;
}

.file-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.file-text {
  font-size: 28rpx;
}

/* 识别结果 */
.result-section {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.result-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  font-size: 26rpx;
  color: #667eea;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  background-color: #f0f2ff;
}

.result-box {
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
  min-height: 200rpx;
}

.result-text {
  width: 100%;
  min-height: 180rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  background-color: transparent;
}

.audio-time {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.apply-btn {
  margin-top: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 12rpx;
  font-size: 28rpx;
  padding: 20rpx;
}

.apply-btn[disabled] {
  background: #e0e0e0;
  color: #999;
}

/* 识别历史 */
.history-section {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.history-header {
  display: flex;
  align-items: baseline;
  margin-bottom: 20rpx;
}

.history-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 10rpx;
}

.history-count {
  font-size: 24rpx;
  color: #999;
}

.history-list {
  max-height: 800rpx;
  overflow-y: auto;
}

.history-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  align-items: center;
}

.history-item:last-child {
  border-bottom: none;
}

.history-content {
  flex: 1;
  margin-right: 20rpx;
}

.history-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.history-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.history-time {
  font-size: 24rpx;
  color: #999;
}

.history-duration {
  font-size: 24rpx;
  color: #667eea;
}

.history-action {
  flex-shrink: 0;
}

.delete-btn {
  font-size: 26rpx;
  color: #f5576c;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  background-color: #ffebee;
}

.empty-tip {
  text-align: center;
  padding: 60rpx 0;
  font-size: 28rpx;
  color: #999;
}

/* 使用提示 */
.tips-section {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.tips-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

